<div class="span5">
    <select class="select2 inherit-width" name={{def.type_name}}>
        {{#eachOptions def.options}}
        <option value="{{{this.key}}}" {{#eq this.key ../def.module}}selected{{/eq}}>{{this.value}}</option>
        {{/eachOptions}}
    </select>
</div>
<div class="span7">
    <input type="hidden" name="{{name}}" class="select2 select2-parent inherit-width" value="{{value}}" data-id="{{getFieldValue this.model def.id_name}}">
</div>
{{#unless hideHelp}}{{#if def.help}}<p class="help-block">{{str def.help module}}</p>{{/if}}{{/unless}}
